<div class="signup-container">
    <h1>Create Account</h1>
    <form class="form signup-form">
        <input type="text" placeholder="Enter Username" name="username" required id="signup-username">
        <input type="password" placeholder="Enter Password" name="password" required id="signup-password">

        <p class="p-sm">Already have an account? <a class="hplnk" href="/login">Login</a></p>
        <button id="signup" type="submit">Sign Up</button>

    </form>
</div>
<script src="/js/signup.js"></script>